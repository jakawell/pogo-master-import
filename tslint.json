{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": {
            "severity": "default",
            "options": [
                "single"
            ]
        },
        "ordered-imports": {
            "severity": "off"
        },
        "object-literal-sort-keys": {
            "severity": "off"
        },
        "max-line-length": {
            "severity": "warn",
            "options": {
                "limit": 120,
                "ignore-pattern": "^import |^export {(.*?)}|class [a-zA-Z]+ implements |//"
            }
        }
    },
    "rulesDirectory": []
}